@model List<Usuario>
<h1>Usuarios cadastrados no sistema</h1>

<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if(u.Tipo==1)
                {
                    <td>Admin</td>
                }
                else
                {
                    <td>Padr√£o</td>
                }

                <td><a href="editarUsuario?id=@u.Id" class="btn btn-warning">Editar</a></td>
                <td><a href="ExcluirUsuario?id=@u.Id" class="btn btn-danger">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="RegistrarUsuario" class="btn btn-primary">Registrar novo usuario</a>